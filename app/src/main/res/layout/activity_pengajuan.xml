<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PengajuanActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Silahkan isi Data dibawah ini"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:text="Nama    :"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nama_1"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/nama" />


        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="132dp"
            android:text="Nim       :"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="253dp"
            android:id="@+id/nim_1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/nim" />

        <TextView
            android:id="@+id/prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="174dp"
            android:text="Prodi     :"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="253dp"
            android:id="@+id/prodi_1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nim"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/prodi" />

        <Button
            android:layout_width="145dp"
            android:id="@+id/selectFile"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="240dp"
            android:textColor="#ffffffff"
            android:background="#ffeabd03"
            android:text="Upload File" />

        <Button
            android:layout_width="145dp"
            android:id="@+id/upload"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="240dp"
            android:background="#ffeabd03"
            android:textColor="#ffffffff"
            android:text="Submit" />
        <TextView
            android:layout_below="@+id/selectFile"
            android:id="@+id/notification"
            android:layout_marginStart="40dp"
            android:text="no file selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/note"
            android:text="Note : Seluruh berkas disatukan menjadi sebuah file berformat .pdf"
            android:layout_width="wrap_content"
            android:layout_below="@+id/selectFile"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/backgroundbutton"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/format"
            android:textSize="18sp"
            android:layout_below="@id/note"
            android:layout_marginTop="10dp"
            android:textColor="@color/backgroundbutton"
            android:text="Format penamaan file : NIM.pdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</RelativeLayout>